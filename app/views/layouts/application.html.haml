%html
  %head
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html;charset=utf-8"}
    %link{:href=>"/images/favicon.ico", :rel=>"shortcut icon"}
    %title 江海社区
    = stylesheet_link_tag 'popmao_ui09_09'
    - if @controller.controller_name.downcase == 'forums' and @controller.action_name.downcase == 'index'
      = stylesheet_link_tag 'city_header_v1.1.css', 'city_index_v1.1.css'
    - else
      = stylesheet_link_tag 'public', 'list'
    = javascript_include_tag :defaults
    = init_tinymce_hammer_if_required
  %body
    = render :partial => 'layouts/new_top'
    = yield
    = render :partial => "layouts/footer"
